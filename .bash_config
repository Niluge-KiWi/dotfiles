# emacs
function emacs-client
{
    emacsclient -a "" -c $*
}
function ec
{
    if [ -z "$DISPLAY" ]; then
        # no x term
        emacs-client $*
    else
        # x term: we fork
        emacs-client $* > /dev/null &
    fi
}
